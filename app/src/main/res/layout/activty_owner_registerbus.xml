<?xml version="1.0" encoding="utf-8"?>
<ScrollView xmlns:android="http://schemas.android.com/apk/res/android"
    android:layout_width="match_parent"
    android:id="@+id/ownerRegisterBus"
    android:layout_height="match_parent"
    android:background="#FFFFFF"
    android:padding="16dp">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:orientation="vertical">

        <!-- Bus Number Input -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Vehicle Registration Number"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <EditText
            android:id="@+id/busNumber"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Enter Bus Number"
            android:inputType="text"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <!-- Bus Seats Spinner -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Bus Seats"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <Spinner
            android:id="@+id/busSeatsSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:entries="@array/bus_seats_options"
            android:fontFamily="@font/inter"
            android:padding="8dp" />

        <!-- Driver Selection (Searchable Spinner) -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Driver"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <Spinner
            android:id="@+id/driverSpinner"
            android:layout_width="match_parent"
            android:layout_height="48dp"
            android:background="@drawable/spinner_background"
            android:fontFamily="@font/inter"
            android:padding="8dp" />

        <!-- Route Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Select Route"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <!-- Route Options: Spinner or Map Button -->
        <LinearLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:orientation="horizontal"
            android:gravity="center_vertical">

            <Spinner
                android:id="@+id/routeSpinner"
                android:layout_width="match_parent"
                android:layout_height="48dp"
                android:layout_weight="1"
                android:background="@drawable/spinner_background"
                android:entries="@array/sri_lankan_routes"
                android:fontFamily="@font/inter"
                android:padding="8dp" />

            <Button
                android:id="@+id/mapSelectButton"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:text="Map"
                android:backgroundTint="#000000"
                android:textColor="#FFFFFF"
                android:layout_marginStart="8dp"
                android:padding="8dp"
                android:fontFamily="@font/inter" />
        </LinearLayout>

        <!-- Departure Interval Selection -->
        <TextView
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:text="Departure Interval"
            android:textSize="16sp"
            android:paddingTop="8dp"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <EditText
            android:id="@+id/departureInterval"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:hint="Interval in hours"
            android:inputType="number"
            android:padding="12dp"
            android:background="@drawable/edit_text_background"
            android:textColor="#000000"
            android:fontFamily="@font/inter" />

        <!-- Register Bus Button -->
        <Button
            android:id="@+id/registerBusButton"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="16dp"
            android:text="Register Bus"
            android:backgroundTint="#000000"
            android:textColor="#FFFFFF"
            android:padding="12dp"
            android:fontFamily="@font/inter" />

    </LinearLayout>
</ScrollView>
